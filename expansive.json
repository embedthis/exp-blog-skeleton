/*
    expansive.json - Configuration for exp-blog-skeleton
 */
{
    meta: {
        blog: {
            '?site': 'https://myblog.example.com',
            '?title': 'Displayed Blog Title',
            '?description': 'Multi-word Blog Description',
            '?author': {
                name: "First Last",
                image: 'images/blog/author.jpg',
                about: 'I am just a humble blogger.'
            },
            '?comments': false,
            '?google': {
                id: 'google-id',
                name: 'Google-account-name'
            },
            '?twitter': {
                id: 'twitter-id',
                name: "User-Name",
            },
            '?youtube': {
                "id": "youtube-id",
                "name": "User Name"
            },
            '?sites': {
                'example.com': 'https://example.com/'
            },
            '?search': 'https://google.com/search',
        },
    },
    services: {
        blog: {
            '?home': '.',
            '?categories': 'categories',
            '?posts': 'posts',
            '?recent': 5,
            '?rss': true,
        }
    },
    "debug": {
        "services": {
            "compress": {
                "?enable": false
            },
            "reload": {
                "?enable": false
            },
            "html": {
                "?enable": false
            }
        }
    },
    "release": {
        "services": {
            "compress": {
                "?enable": true
            },
            "reload": {
                "?enable": false
            },
            "css": {
                "?minify": true,
                "?usemin": true,
                "?usemap": false
            },
            "js": {
                "?minify": true,
                "?usemin": true,
                "?usemap": false
            }
        }
    }
}

