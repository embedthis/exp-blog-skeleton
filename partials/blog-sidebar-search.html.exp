    <div class="search">
        <div class="rss">
            <a href="@~/@={meta.blog.home}/atom.xml" type="application/atom+xml" title="subscribe via RSS">
                <img src="@~/images/rss.png" alt="rss">
            </a>
        </div>
        <div class="query">
            <form id="search-form" action="@={meta.blog.search}" method="GET">
                <div class="ui right icon input">
                    <i id="search" class="search icon"></i>
                    <input type="text" name="q" placeholder="Search" title="q">
                    <input type="hidden" name="q" value="site:@={meta.blog.site}" title="site">
                </div>
            </form>
        </div>
    </div>
